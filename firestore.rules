/**
 * @fileoverview Firestore Security Rules for Poot Quest.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for most data, supplemented by public read access for global content.
 * Data is structured to minimize the need for complex security checks, favoring simpler, more performant rules.
 *
 * Data Structure:
 * - /users/{userId}:  User account information. Only the user can access their own document.
 * - /users/{userId}/characters/{characterId}: Character data owned by a user. Only the user can access their characters.
 * - /users/{userId}/characters/{characterId}/decks/{deckId}: Decks of cards owned by a user's character.
 * - /users/{userId}/characters/{characterId}/inventory/{itemId}: Items held by a user's character.
 * - /users/{userId}/characters/{characterId}/narrativeContexts/{narrativeContextId}: Narrative context for characters.
 * - /users/{userId}/runChronicles/{runChronicleId}: Game run history for users.
 * - /cards/{cardId}: Global card data. Publicly readable, but only writeable by authenticated users.
 *
 * Key Security Decisions:
 * - User listing is disallowed for privacy.
 * - Public read access is granted to the /cards collection.
 * - All write operations are protected by authorization checks.
 *
 * Denormalization for Authorization:
 *  Ownership: The structure `/users/{userId}/...` inherently denormalizes user ownership into the path, which is then enforced by the `isOwner(userId)` function.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by an authenticated user.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Ensures that only authenticated users can perform certain actions.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Enforces ownership for data access.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the existing owner of the resource.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Ensures that only existing owners can modify or delete resources.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rule set for user documents.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' creates their own document at /users/user123.
     * @deny (create) User with ID 'user123' tries to create a document at /users/anotherUser.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule set for character documents.
     * @path /users/{userId}/characters/{characterId}
     * @allow (create) User with ID 'user123' creates a character for themselves at /users/user123/characters/char1.
     * @deny (update) User with ID 'user123' tries to update a character owned by another user.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/characters/{characterId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule set for deck documents.
     * @path /users/{userId}/characters/{characterId}/decks/{deckId}
     * @allow (create) User with ID 'user123' creates a deck for their character.
     * @deny (update) User with ID 'user123' tries to update a deck for another user's character.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/characters/{characterId}/decks/{deckId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.characterId == characterId;
      allow update: if isExistingOwner(userId) && request.resource.data.characterId == resource.data.characterId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule set for item documents in a character's inventory.
     * @path /users/{userId}/characters/{characterId}/inventory/{itemId}
     * @allow (create) User with ID 'user123' creates an item in their character's inventory.
     * @deny (update) User with ID 'user123' tries to update an item in another user's character's inventory.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/characters/{characterId}/inventory/{itemId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule set for narrative context documents.
     * @path /users/{userId}/characters/{characterId}/narrativeContexts/{narrativeContextId}
     * @allow (create) User with ID 'user123' creates a narrative context for their character.
     * @deny (update) User with ID 'user123' tries to update a narrative context for another user's character.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/characters/{characterId}/narrativeContexts/{narrativeContextId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.characterId == characterId;
      allow update: if isExistingOwner(userId) && request.resource.data.characterId == resource.data.characterId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule set for run chronicle documents.
     * @path /users/{userId}/runChronicles/{runChronicleId}
     * @allow (create) User with ID 'user123' creates a run chronicle for themselves.
     * @deny (update) User with ID 'user123' tries to update a run chronicle for another user.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/runChronicles/{runChronicleId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

     /**
      * @description Rule set for card documents. Publicly readable, owner-only writeable.
      * @path /cards/{cardId}
      * @allow (get) Any user can read card data.
      * @deny (create) Anonymous user tries to create a card.
      */
    match /cards/{cardId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }
  }
}